<?xml version="1.0" encoding="UTF-8" ?>
<project name="maven-antrun-" default="main"  >
<target name="main">
  <property location="/home/qls/workspace3/hbase-1.0.2/hbase-thrift/target/hbase-webapps" name="build.webapps"/>
  <property location="/home/qls/workspace3/hbase-1.0.2/hbase-thrift/src/main/resources/hbase-webapps" name="src.webapps"/>
  <property location="/home/qls/workspace3/hbase-1.0.2/hbase-thrift/target/generated-sources" name="generated.sources"/>
  <mkdir dir="${build.webapps}"/>
  <copy todir="${build.webapps}">
    <fileset dir="${src.webapps}">
      <exclude name="**/*.jsp"/>
      <exclude name="**/.*"/>
      <exclude name="**/*~"/>
    </fileset>
  </copy>
  <taskdef classname="org.apache.jasper.JspC" name="jspcompiler" classpathref="maven.compile.classpath"/>
  <mkdir dir="${build.webapps}/thrift/WEB-INF"/>
  <jspcompiler uriroot="${src.webapps}/thrift" package="org.apache.hadoop.hbase.generated.thrift" webxml="${build.webapps}/thrift/WEB-INF/web.xml" outputdir="${generated.sources}/java"/>
</target>
</project>